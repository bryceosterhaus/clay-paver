<%
	if (typeof placeholder === 'undefined') {
		placeholder = '';
	}
%>

<div class="cp-form-group cp-form-group-color">
	<% if (typeof tooltip !== 'undefined') { %>
		<%- include('cpLabelTooltip', { tooltip: tooltip }) %>
	<% } %>

	<label class="cp-control-label" for="<%- id %>"><%- id %></label>

	<% if (typeof unset !== 'undefined') { %>
		<a class="cp-link cp-unset-link" href="/">Unset</a>
	<% } %>

	<input class="cp-form-control" id="<%- id %>" name="clay[<%- id %>]" placeholder="<%- placeholder %>" type="text">
	<input class="cp-form-control cp-form-control-color" type="color" value="#ffffff">
</div>